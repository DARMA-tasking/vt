# Defines the following variables:
#  VT_INCLUDE_DIRS - include directories
#  VT_LIBRARY_DIRS - library directories
#  VT_LIBRARIES    - libraries to link against
#  VT_CXX_COMPILER - the compiler used
#  VT_CXX_FLAGS - the compiler flags used

# Compute paths
GET_FILENAME_COMPONENT (VT_CMAKE_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)
IF (EXISTS "${VT_CMAKE_DIR}/CMakeCache.txt")
   # In build tree, which is undesirable
   MESSAGE(FATAL_ERROR "FIND_PACKAGE found build tree instead of install tree.")
ELSE ()
   SET (VT_INCLUDE_DIRS ${VT_CMAKE_DIR}/../include)
   SET (VT_LIBRARY_DIRS ${VT_CMAKE_DIR}/../lib)
ENDIF ()

# Get compiler and flags
SET (VT_CXX_COMPILER "@CMAKE_CXX_COMPILER@")
SET (VT_CXX_FLAGS "@CMAKE_CXX_FLAGS@")

# Our library dependencies (contains definitions for IMPORTED targets)
INCLUDE ("${VT_CMAKE_DIR}/virtual_transport_mpiDepends.cmake")

SET (VT_LIBRARIES virtual-transport @CMAKE_VT_LIBS_INIT@)

